@model BookTok.Models.Review

@{
    ViewData["Title"] = "Review Details";
}

<h1>Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Costumer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Costumer.Name)
        </dd>
        <dt class = "col-sm-2">
            Book
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditReview" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Reviews" asp-route-id="@Model?.BookId">Back to List</a>
</div>
